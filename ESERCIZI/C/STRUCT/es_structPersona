#include <stdio.h>
#include <stdlib.h>

// Definizione della struttura per definire una persona
struct Persona {
    char nome [50];
    char cognome [50];
    int eta;
    float altezza;
};

// Definizione della struttura modo 2
/*
typedef struct {
    char nome [50];
    char cognome [50];
    int eta;
    float altezza;
} Persona;
 */

// Metodo che usa persona per valore (no per indirizzo, indirizzo si usa quando si cambia qualcosa)
void stampaDettagliPersona(struct Persona p) {
    printf("\nDettagli della persona (da funzione):\n");
    printf("Nome: %s\n", p.nome);
    printf("Cognome: %s\n", p.cognome);
    printf("Eta: %d\n", p.eta);
    printf("Altezza: %0.2f\n", p.altezza);
}

void aggiornaEta(struct Persona *p, int nuovaEta) {
    (*p).eta = nuovaEta;
}

int main() {

    int eta;
    struct Persona persona1 = {"Marco", "Rossi", 15, 1.77};

    stampaDettagliPersona(persona1);

    printf("Inserisci la nuova eta': \n");
    scanf("%d", &eta);

    aggiornaEta(&persona1, eta);

    stampaDettagliPersona(persona1);

    return 0;
}
